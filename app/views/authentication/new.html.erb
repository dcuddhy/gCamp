<div class="page-header">
</div>

<div class= "well form col-md-4 col-sm-offset-4">
  <h2>Sign into gCamp</h2>
<br>

<%= form_tag signin_path do |f| %>

  <% if @sign_in_error %>
    <p>
      <%= @sign_in_error %>
    </p>
  <% end %>

  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class:"form-control" %>
  </div>


  <div class="form-group">
    <%= submit_tag "Sign in", class:"btn btn-primary" %>
  </div>

<% end %>

</div>
