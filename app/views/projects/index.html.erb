<div class="page-header">
  <%= link_to "Add a Project", new_project_path, class:"btn btn-primary pull-right" %>
  <h2>Projects</h2>
</div>

<% if notice.is_a? String %>
  <div class="text-center alert alert-success"><%= notice %></div>
<% end %>

<table class="table">
  <thead>
    <th class="col-sm-2">Name</th><th class="text-center col-sm-1">Tasks</th><th class="col-sm-4"></th>
  </thead>
    <tr>
        <% @projects.each do |project| %>
      <td>
        <%= link_to project.name, project_path(project) %>
      </td>
      <td class="text-center col-sm-1">
        <%= link_to (project.tasks.count), project_tasks_path(project) %>
      </td>
      <td class="text-center col-sm-8">
      </td>
    </tr>
      <% end %>
</table>
