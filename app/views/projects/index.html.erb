<%= page_header "Projects" do %>
  <%= link_to "Add a Project", new_project_path, class:"btn btn-primary" %>
<% end %>


<table class="table">
  <thead>
    <th class="col-sm-2">Name</th><th class="text-center col-sm-1">Members
</th><th class="text-center col-sm-1">Tasks</th><th class="col-sm-4"></th>
  </thead>
    <tr>
        <% @projects.each do |project| %>
      <td>
        <%= link_to project.name, project_path(project) %>
      </td>
      <td class="text-center col-sm-1">
        <%= link_to (project.memberships.count),
         project_memberships_path(project) %>
      </td>
      <td class="text-center col-sm-1">
        <%= link_to (project.tasks.count), project_tasks_path(project) %>
      </td>
      <td class="text-center col-sm-8">
      </td>
    </tr>
      <% end %>
</table>


<br><br>


<% if current_user.pivotal_tracker_token %>

  <div class="page-header">
    <h2>Pivotal Tracker Projects</h2>
  </div>

  <table class="table">

    <thead>
      <th>Name</th>
    </thead>

    <% @tracker_projects.each do |tracker_projects| %>
      <tr>
        <td>
          <%= link_to tracker_projects[:name],
          "https://www.pivotaltracker.com/n/projects/#{tracker_projects[:id]}",
          target: "_blank" %>
        </td>
      </tr>
    <% end %>

  </table>

<% end %>
