<div class="page-header">
  <%= link_to 'New Task', new_task_path, class: "pull-right btn btn-primary" %>
  <h2>Tasks</h2>
</div>





<table class="table">

<tbody>






    Description
    <% @tasks.each do |task| %>
      <tr>
        <td width="100%"><%= task.description %></td>
        <td><%= link_to 'Show', task, class: "pull-right btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "pull-right btn btn-info" %></td>
        <td><%= link_to 'Destroy', task, class: "pull-right btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
