<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group row navbar-form">
    <%= f.label :description, class:"col-md-1" %>
    <%= f.text_field :description, class:"col-md-4 span2" %>
  </div>

  <div class="form-group row">
    <%= f.label :due_date, "Due Date", class:"col-md-1" %>
    <%= f.date_field :due_date, class:"col-md-4" %>
  </div>


<div class="complete row">
  <%= f.label :checkbox, "Complete", class:"col-md-1" %>
  <%= f.check_box :complete, class:"col-md-4" %>
</div>

<br>
  <div class="actions btn">
    <%= f.submit %>
  </div>
  <br>
<% end %>
