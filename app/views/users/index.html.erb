  <div class= "page-header">
    <%= link_to 'New User', new_user_path, class: "btn btn-primary pull-right" %>
    <h2>Users</h2>

  </div>


  <table class="table" width="100%">
      <thead>
        <th>Name</th><th>Email</th><th></th><th width="50%"></th>
      </thead>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to "#{user.full_name}", user_path(user) %>
            </td>
            <td>
              <% if user.id == current_user.id  %>
                <%= mail_to user.email %>
              <% end %>
            </td>
            <td></td>
            <td>
              <% if user.id == current_user.id  %>
                <%= link_to 'Edit', edit_user_path(user), class: "pull-right" %>
              <% end %>
            </td>
          </tr>
        <% end %>
  </table>
