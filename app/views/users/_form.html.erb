<%= form_for@user do |f| %>

  <div class="form-group row">
    <%= f.label :first_name, "First Name", class:"col-xs-2" %>
    <div class="col-xs-4">
    <%= f.text_field :first_name %>
    </div>
  </div>


  <div class="field form-group row">
    <%= f.label :last_name, "Last Name", class:"col-xs-2" %>
    <div class="col-xs-4">
      <%= f.text_field :last_name %>
    </div>
  </div>


  <div class="field form-group row">
    <%= f.label :email, "Email", class:"col-xs-2" %>
    <div class="col-xs-4">
      <%= f.text_field :email %>
    </div>
  </div>

<br>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class:"btn btn-primary" %>
  </div>
</div>

<% end %>

</form>
