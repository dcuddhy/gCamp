<div class="page-header">
  <h2><%= title %> User</h2>
</div>


<div class= "form-horizontal">
<br>


<!--  **** .casecmp for case insensitive****-->
<%= form_for @user, html: {class: "form-horizontal"} do |f| %>

  <div class="form-group row">
    <div class="col-xs-offset-3 col-sm-6">
    <%= render "layouts/errors", object: @user %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :first_name, class:"col-xs-3 text-right" %>
    <div class="col-xs-4">
    <%= f.text_field :first_name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :last_name, class:"col-xs-3 text-right" %>
    <div class="col-xs-4">
    <%= f.text_field :last_name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, class:"col-xs-3 text-right" %>
    <div class="col-xs-4">
    <%= f.email_field :email, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class:"col-xs-3 text-right" %>
    <div class="col-xs-4">
    <%= f.password_field :password, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class:"col-xs-3 text-right" %>
    <div class="col-xs-4">
    <%= f.password_field :password_confirmation, class:"form-control" %>
    </div>
  </div>

  <br>

  <div class="form-group row">
    <div class="col-xs-offset-3 col-sm-9">
    <%= f.submit class:"btn btn-primary"  %>
    </div>
  </div>

<% end %>
</div>
