<div class="page-header">
  <%= link_to 'Edit', edit_user_path, class: "btn btn-info pull-right" %>
  <h2><%= @user.full_name %></h2>
</div>

<table class="col-xs-12">

  <tr>
    <td>
      <strong class="col-xs-2 text-right">First Name: </strong><%= @user.first_name %>
    </td>
  </tr>

  <tr>
    <td>
      <strong class="col-xs-2 text-right" >Last Name: </strong><%= @user.last_name %>
    </td>
  </tr>

  <tr>
    <td>
      <strong class="col-xs-2 text-right">Email: </strong><%= mail_to @user.email %>
    </td>
  </tr>

  <tr>
    <td>
      <strong class="col-xs-2 text-right">Pivotal: </strong><%= mail_to @user.email %>
    </td>
  </tr>

</table>
