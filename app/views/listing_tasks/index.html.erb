<h1>Listing listing_tasks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listing_tasks.each do |listing_task| %>
      <tr>
        <td><%= listing_task.description %></td>
        <td><%= link_to 'Show', listing_task %></td>
        <td><%= link_to 'Edit', edit_listing_task_path(listing_task) %></td>
        <td><%= link_to 'Destroy', listing_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing task', new_listing_task_path %>
