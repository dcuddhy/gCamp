
<table class="table" width="100%" >
  <thread>
    <tr>
      <td><h1>Tasks</h1></td>
      <td style=vertical-align:bottom align="right"><button class="btn btn-small btn-inverse" type="button"><%= link_to 'New Listing task', new_listing_task_path %></h5></button></td>
    </tr>
  </thread>
</table>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listing_tasks.each do |listing_task| %>
      <tr>
        <td width="100%"><%= listing_task.description %></td>
        <td align="right"><button class="btn btn-small btn-primary" type="button"><%= link_to 'Show', listing_task %></button></td>
        <td align="right"><button class="btn btn-small btn-primary" type="button"><%= link_to 'Edit', edit_listing_task_path(listing_task) %></button></td>
        <td align="right"><button class="btn btn-small btn-primary" type="button"><%= link_to 'Destroy', listing_task, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
