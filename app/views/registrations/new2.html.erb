<div class="page-header">

</div>

<div class= "well form-horizontal col-md-4 col-sm-offset-4">
<h2>Sign Up for gCamp!</h2>
<br>



<%= form_for @user, url: signup_path do |f| %>

<div class="form-group row">
  <%= f.label :first_name, "First Name", class:"col-xs-2" %>
  <div class="col-xs-4">
  <%= f.text_field :first_name, class:"form-control " %>
  </div>
</div>


<div class="field form-group row">
  <%= f.label :last_name, "Last Name", class:"col-xs-2" %>
  <div class="col-xs-4">
    <%= f.text_field :last_name, class:"form-control" %>
  </div>
</div>


<div class="field form-group row">
  <%= f.label :email, "Email", class:"col-xs-2" %>
  <div class="col-xs-4">
    <%= f.text_field :email, class:"form-control" %>
  </div>
</div>


<div class="field form-group row">
  <%= f.label :password, "Password", class:"col-xs-2" %>
  <div class="col-xs-4">
    <%= f.password_field :password, class:"form-control" %>
  </div>
</div>


<div class="field form-group row">
  <%= f.label :password_confirmation, "Password Confirmation", class:"col-xs-2" %>
  <div class="col-xs-4">
    <%= f.password_field :password_confirmation, class:"form-control" %>
  </div>
</div>


<br>

<div class="form-group row">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class:"btn btn-primary " %>
  </div>
</div>


<% end %>



</div>
