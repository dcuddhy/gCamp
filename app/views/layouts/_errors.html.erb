<div class="alert alert-danger">
  <% if object.errors.present? %>

      <strong>
        <%= pluralize(object.errors.count, "error") %>
        prohibited this post from being saved:
      </strong>

      <div class="col-xs-offset-1">
        <ul>
          <% object.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
      
  <% end %>
</div>
